@model TccMvc.ViewModel.ClienteViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 120vh">
   <div class="d-flex flex-column justify-content-center">
        @if (TempData["Error"] != null)
        {
            <div id="mensagem-sucesso" class="alert alert-danger text-center mt-3">@TempData["Error"]</div>
            <script>
                setTimeout(function () {
                    document.getElementById("mensagem-sucesso").style.display = "none";
                }, 4000);
            </script>
        }
   </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h1 class="mb-4 text-center">Login</h1>
                <hr />

                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Email" class="control-label">E-mail</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Senha" class="control-label">Senha</label>
                        <input asp-for="Senha" class="form-control" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mb-2 ">
                        <button type="submit" class="btn btn-danger link-opacity-75">Entrar</button>
                    </div>
                </form>

                <div class="text-center">
                    <a asp-controller="ContaUsuario" asp-action="Cadastro">Não possui cadastro? Cadastre-se aqui</a>
                </div>
            </div>
        </div>
    </div>
</div>


