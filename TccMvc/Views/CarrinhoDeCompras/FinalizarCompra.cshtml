@model TccMvc.ViewModels.FinalizarAluguelViewModel
@{
    ViewData["Title"] = "Finalizar Compra";
}
<style>
    .btn-details {
        background-color: gray;
        color: white;
    }
</style>
<div style="margin-top:150px">
    @if (TempData["Error"] != null)
    {
        <div id="mensagem-sucesso" class="alert alert-danger alert-dismissible fade show position-fixed " role="alert" style="top: 15%; left: 50%; transform: translate(-50%, -50%); z-index: 9999;">
            <strong class="text-center">@TempData["Error"]</strong>
        </div>
        <script>
            setTimeout(function () {
                document.getElementById("mensagem-sucesso").style.display = "none";
            }, 8000);
        </script>
    }
    <h4 class="text-center mb-4">Complete seus dados antes de finalizar o pedido</h4>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="FinalizarCompra">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" type="text" class="form-control " />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" type="tel" class="form-control " />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CEP" class="control-label"></label>
                            <input asp-for="CEP" type="text" class="form-control " />
                            <span asp-validation-for="CEP" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Bairro" class="control-label"></label>
                            <input asp-for="Bairro" type="text" class="form-control " />
                            <span asp-validation-for="Bairro" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Rua" class="control-label"></label>
                            <input asp-for="Rua" type="text" class="form-control " />
                            <span asp-validation-for="Rua" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Numero" class="control-label"></label>
                            <input asp-for="Numero" type="number" class="form-control " />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DataEvento" class="control-label"></label>
                            <input asp-for="DataEvento" name="dataEvento" class="form-control" id="dataEvento" />
                            <span asp-validation-for="DataEvento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        
                    </div>
                </div>
                <div class="text-center">
                    <div class="form-group mt-2">
                        <input type="submit" value="Finalizar" class="btn btn-primary btn-lg w-100" />
                    </div>
                </div>
            </form>
            <p class="font-weight-bold mb-1">Observações importantes:</p>
            <p class=" mb-1">A data de  retirada do(os) produtos deve ser <b>um dia anterior a data do evento.</b></p>
            <p class=" mb-1">A data de devolução do produto deve ser <b>no dia subsequente ao evento.</b></p>
        </div>
    </div>
    <div>
        <a asp-action="Carrinho" asp-controller="CarrinhoDeCompras" class="btn  mx-2 btn-details link">Voltar</a>
    </div>
</div>
