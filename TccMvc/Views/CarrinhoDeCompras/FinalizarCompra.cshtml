@model TccMvc.Models.Cliente
@{
    ViewData["Title"] = "Finalizar Compra";
}
<style>
    .btn-details {
        background-color: gray;
        color: white;
    }
</style>
<div style="margin-top:150px">
    <h4 class="text-center mb-4">Complete seus dados antes de finalizar o pedido</h4>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="FinalizarCompra" onsubmit="return validarFormulario()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" type="text" class="form-control input-validation" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" type="tel" class="form-control input-validation" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CEP" class="control-label"></label>
                            <input asp-for="CEP" type="text" class="form-control input-validation" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Bairro" class="control-label"></label>
                            <input asp-for="Bairro" type="text"  class="form-control input-validation" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Rua" class="control-label"></label>
                            <input asp-for="Rua" type="text" class="form-control input-validation" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Numero" class="control-label"></label>
                            <input asp-for="Numero" type="number" class="form-control input-validation" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Data Início:</label>
                            <input type="date" name="dataInicio" class="form-control" id="dataInicio" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Data Final:</label>
                            <input type="date" name="dataFinal" class="form-control" id="dataFinal" />
                        </div>
                    </div>
                </div>
                <div id="error-message" class="text-danger text-center fw-bold" style="display: none;"></div>

                <div class="text-center">
                    <div class="form-group mt-2">
                        <input type="submit" value="Finalizar" class="btn btn-primary btn-lg w-100" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Carrinho" asp-controller="CarrinhoDeCompras" class="btn  mx-2 btn-details link">Voltar</a>
    </div>
</div>

<script>
    function validarFormulario() {
        var inputs = document.querySelectorAll('.input-validation');
        var dataInicio = document.getElementById('dataInicio').value;
        var dataFinal = document.getElementById('dataFinal').value;
        var errorMessage = document.getElementById('error-message');

        for (var i = 0; i < inputs.length; i++) {
            if (inputs[i].value === '') {
                errorMessage.innerText = 'Por favor, preencha todos os campos do formulário.';
                errorMessage.style.display = 'block';
                return false;
            }
        }

        if (dataInicio === '' || dataFinal === '') {
            errorMessage.innerText = 'Por favor, preencha as datas de início e final.';
            errorMessage.style.display = 'block';
            return false;
        }

        errorMessage.style.display = 'none';
        return true;
    }
</script>