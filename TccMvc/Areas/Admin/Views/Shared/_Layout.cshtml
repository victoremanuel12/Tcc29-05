<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TccMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/leadmark.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TccMvc.styles.css" asp-append-version="true" />

</head>
<style>
  
</style>
<body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">
        <nav class="navbar custom-navbar navbar-expand-md navbar-light fixed-top" data-spy="affix" data-offset-top="10" >
        <div class="container bg-white">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Images/LogoMatrizDecor.png" style="width:40px;"/> </a>
            <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Categorias" asp-action="Index">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Produtos" asp-action="Index">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="HistoricoAluguel" asp-action="Index">Pedidos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  ml-4 nav-link btn btn-primary btn-sm rounded" asp-area=""  asp-controller="ContaUsuario" asp-action="Logout">Sair</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    <div class="container-fluid" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/leadmark.js"></script>
    <script src="~/js/vendors/bootstrap/bootstrap.js"></script>
    <script src="~/js/vendors/isotope/isotope.pkgd.js"></script>
    <script src="~/js/vendors/jquery/jquery-3.4.1.js"></script>
    <script src="~/js/vendors/bootstrap/bootstrap.affix.js"></script>
    <script src="assets/js/leadmark.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
