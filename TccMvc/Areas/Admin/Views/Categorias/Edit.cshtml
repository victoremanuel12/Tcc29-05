@model TccMvc.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}
<section class="container d-flex justify-content-center align-items-center flex-column" style="min-height: 100vh">

    <h3>Editar Categoria</h3>
    <hr />
    <div>
        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <b><label asp-for="Nome" class="control-label"></label></b>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group w-100">
                    <b><label asp-for="Descricao" class="control-label"></label></b>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
        <a asp-action="Index" class="btn btn-primary">Voltar a lista</a>
</section>
