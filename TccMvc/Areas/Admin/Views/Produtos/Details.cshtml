@model TccMvc.Models.Produto

@{
    ViewData["Title"] = "Details";
}
<section class="container d-flex justify-content-center align-items-center flex-column" style="min-height: 100vh">
    <h1>Detalhes</h1>

    <div>
        <h4>Produto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                Preço
            </dt>
            <dd class="col-sm-10">
                @Model.Preco.ToString("c")
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
</section>

