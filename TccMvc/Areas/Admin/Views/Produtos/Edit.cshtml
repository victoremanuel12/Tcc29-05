@model TccMvc.Models.Produto

@{
    ViewData["Title"] = "Edit";
}


<section class=" d-flex justify-content-center align-items-center flex-column" style="margin-top:100px">
    <h1>Editar</h1>
    <hr />
    <div class="col-md-12">
        <div class="col-md-8 offset-md-2">
            <form asp-action="EditPost" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label"></label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Preco" class="control-label"></label>
                            <input asp-for="Preco" class="form-control" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DescricaoDetalhada" class="control-label"></label>
                            <input asp-for="DescricaoDetalhada" class="form-control" />
                            <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ImagemUrl" class="control-label"></label>
                            <input name="imagemFile" type="file" class="form-control" />
                            <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsDisponivel" /> Está disponível?
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CategoriaId" class="control-label"></label>
                            <select asp-for="CategoriaId" class="form-control">
                                @foreach (var item in @ViewBag.Categorias)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-around align-content-center">
                    <div>
                        <a asp-action="Index" class="btn btn-primary">Voltar</a>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </div>
               
            </form>
           
        </div>
    </div>



</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
