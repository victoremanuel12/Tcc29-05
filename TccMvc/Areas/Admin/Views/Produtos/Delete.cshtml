@model TccMvc.Models.Produto

@{
    ViewData["Title"] = "Deletar";
}
<section class="container d-flex justify-content-center align-items-center flex-column text-center" style="min-height: 100vh">
    <h3>Deseja realmente deletar o produto?</h3>
    <div>
        <h4>Produto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
               Descrição
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                Preço
            </dt>
            <dd class="col-sm-10">
                @Model.Preco.ToString("c")
            </dd>
            <dt class="col-sm-2">
               Detalhes
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DescricaoDetalhada)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
            <input type="submit" value="Deletar" class="btn btn-danger" /> 
        </form>
    </div>
</section>

